@using MistikRota.Entites
@using MistikRota
@using MistikRota.Resources
@model List<Story>


@{
    ViewBag.Title = "Index";
}



<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_PartialCategories")
        </div> <!--category-->
        <div class="col-md-9">
          
            <div class="row carousel-holder">
                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="~/Content/img/slider.png" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Content/img/slider2.png" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Content/img/slider3.png" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div> <!--slider-->
            <div class="row"> <!--Content-->
            
            @foreach (Story story in Model)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Content/img/content-img.png" alt="@story.Title">
                        <div class="caption">
                            <h4 class="pull-right"></h4>
                            <h4>
                                <a href="#">
                                    @story.Title
                                </a>
                            </h4>
                            <h6 style="text-align: right">
                                @story.Owner.Username<span class="glyphicon glyphicon-user"></span><br />
                                <span class="glyphicon glyphicon-time">@story.ModifiedDate.ToString("dd.MM.yy HH:mm")</span>
                            </h6>
                            
                                @if (string.IsNullOrEmpty(story.Content) == false && story.Content.Length > 60)
                                {
                                    <p> @(story.Content.Substring(0,60) + "...")</p>
                                    <p class="pull-right">
                                        <a href="#" data-toggle="modal" data-target="#modal_notedetail" data-note-id="Devamı..." class="btn btn-default btn-sm"> @Resource.devamı <span class="glyphicon glyphicon-chevron-right"></span></a>
                                    </p>
                                }
                                else
                                {
                                    <p>@story.Content</p>
                                }
                           
                            
                        </div>
                        <div>
                            <hr />
                        </div>
                        <div class="ratings">
                            <p class="pull-right">
                                <button class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal_comment">
                                    <span class="glyphicon glyphicon-comment"></span> @Resource.yorumlar
                                </button>
                            </p>
                            <p>
                                <button class="btn btn-default btn-sm" type="button">
                                    <span class="glyphicon glyphicon-star-empty"></span> @story.LikeCount
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>
    </div>
</div>

@*@Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")*@

@Bootstrap.ModalPopup(id: "modal_notedetail", title: "Öykü Detayı")

