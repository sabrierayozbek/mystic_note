@using MistikRota.Entites
@model Story

<h3>
    
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">
                @Model.Title
            </h3>
        </div>
        <div class="col-md-12">
            <hr />
        </div>
        <div class="col-md-12 text-right">
            <span class="glyphicon glyphicon-user"></span> @Model.Owner.Username<br />
            <span class="glyphicon glyphicon-time"></span> @Model.ModifiedDate
        </div>
        <div class="col-md-12">
            <hr />
        </div>
        <div class="col-md-12">
            <p class="text-justify">
                @Model.Content
            </p>
        </div>
    </div>

</h3>
