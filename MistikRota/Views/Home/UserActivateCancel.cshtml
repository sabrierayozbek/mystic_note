@using MistikRota.Entites.Messages
@model List<ErrorMessageObj>


@{
    ViewBag.Title = "Geçersiz İşlem";
}

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">Yönlendiriliyorsunuz...</h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;Hesap geçerli değil...</h2>
                    <hr />
                    <p cslass="text-justify">@foreach (ErrorMessageObj item in Model)
                                            {
                                               @item.Message<br/>
                                            }</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    setTimeout(function() {
        window.location = "/Home/Index";
    }, 3000)
</script>

